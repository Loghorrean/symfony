{% include 'header.html.twig' %}
<div id = "wrapper">
    <div id = "page-wrapper">
        <div class = "container-fluid">
            <div class = "row">
                <div class = "col-lg-12">
                    <h1 class = "page-header">
                        Add another Book
                    </h1>
                </div>
                <div class = "col-xs-6">
                    {% for message in app.flashes('add_book_success') %}
                        <div class = "alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                    <a href="{{ path('main_page') }}"><button class="btn-primary btn">Go Back</button></a>
                </div>
                <div class = "col-xs-6">
                    <table class = "table table-bordered table-hover">
                        <thead>
                        <th>Book ID</th>
                        <th>Book name</th>
                        <th>Date of publishment</th>
                        <th>Author</th>
                        </thead>
                        <tbody>
                        {% for book in books %}
                            <tr>
                                <td>{{ book.id }}</td>
                                <td>{{ book.name }}</td>
                                <td>{{ book.dateOfPublish|date("Y/m/d") }}</td>
                                <td>{{ book.getAuthorId().name}}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% include 'footer.html.twig' %}